{
    "manifest_version": 2,
    "name": "captureItem",
    "version": "1.1.2",
    "description": "Capture Item by id/class",
    "permissions": ["tabs","activeTab","<all_urls>","storage"],
    
    "content_scripts":[
        {
            "matches": ["<all_urls>"],
            "js": ["capture_item.js"]
        }
    ],
    "background":{
        "scripts": ["background.js"]
    },
    
    "applications": {
        "gecko":{
            "id": "capture_item@watana.be",
            "strict_min_version": "57.0"
        }
    },
    "options_ui": {
        "page": "options.html",
        "browser_style": true
    }
}

