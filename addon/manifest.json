{
    "manifest_version": 2,
    "name": "captureItem",
    "version": "1.0",
    
    "description": "Capture Item by id/class",

    "permissions": ["tabs","activeTab","<all_urls>","downloads","storage"],
    
    "content_scripts":[
        {
            "matches": ["<all_urls>"],
            "js": ["capture_item.js"]
        }
    ],
    "background":{
        "scripts": ["background.js"]
    },
    
    "applications": {
        "gecko":{
            "id": "capture_item@watana.be"
        }
    },

    "options_ui": {
        "page": "options.html",
        "browser_style": true
    }
}

